{
  "manifest_version": 3,
  "name": "Highlighter",
  "description": "Highlight text on websites!",
  "version": "1.0",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_icon": "icon.png",
    "default_title": "Highlighter",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "contextMenus",
    "search",
    "tabs",
    "storage",
    "tts"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "css": [
        "content.css"
      ],
      "js": [
        "node_modules/@webcomponents/custom-elements/custom-elements.min.js",
        "highlighter-popup.js",
        "floating-menu.js",
        "content.js"
      ]
    }
  ]
}